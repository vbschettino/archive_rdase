<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <!--wheel params are: laser name, 3d position, orientation and a gazebo flag-->
    <xacro:macro name="hokuyo" params="name xyz rpy gazebo:=^">
        <joint name="base_to_${name}" type="fixed">
            <parent link="base_link"/>
            <child link="${name}"/>
            <origin xyz="${xyz}"/>
        </joint>

        <link name="${name}">
            <visual>
                <origin xyz="0 0 0" rpy="${rpy}"/>
                <geometry>
                    <mesh filename="package://urdf_example1/description/meshes/hokuyo.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="${rpy}"/>
                <geometry>
                    <box size="0.1 0.1 0.1"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="1e-5" />
                <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
            </inertial>
        </link>


        <!--Add gazebo references, if requested-->
        <xacro:if value="${gazebo}">
            <gazebo reference="${name}">
                <sensor type="gpu_ray" name="${name}_sensor">
                    <pose>0 0 0 0 0 0</pose>
                    <visualize>true</visualize>
                    <update_rate>40</update_rate>
                    <ray>
                        <scan>
                            <horizontal>
                                <samples>720</samples>
                                <resolution>1</resolution>
                                <min_angle>-1.570796</min_angle>
                                <max_angle>1.570796</max_angle>
                            </horizontal>
                        </scan>
                        <range>
                            <min>0.10</min>
                            <max>4.0</max>
                            <resolution>0.01</resolution>
                        </range>
                        <noise>
                            <type>gaussian</type>
                            <mean>0.0</mean>
                            <stddev>0.01</stddev>
                        </noise>
                    </ray>
                    <plugin name="${name}_plugin" filename="libgazebo_ros_gpu_laser.so">
                        <topicName>${name}</topicName>
                        <frameName>${name}</frameName>
                    </plugin>
                </sensor>
            </gazebo>
        </xacro:if>

    </xacro:macro>

</robot>
